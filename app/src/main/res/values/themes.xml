<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme -->
    <style name="Theme.Prodi" parent="android:Theme.Material.Light.NoActionBar">
        <item name="android:colorPrimary">@color/primary_sage</item>
        <item name="android:colorPrimaryDark">@color/primary_sage_dark</item>
        <item name="android:colorAccent">@color/tertiary_gold</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowLightNavigationBar">true</item>
        <item name="android:windowBackground">@color/surface_light</item>
        <item name="android:fontFamily">@font/poppins</item>
    </style>

    <!-- Splash screen theme -->
    <style name="Theme.Prodi.Splash" parent="Theme.Prodi">
        <item name="android:windowBackground">@drawable/splash_background</item>
        <item name="android:statusBarColor">@color/primary_sage</item>
        <item name="android:navigationBarColor">@color/primary_sage</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowLightNavigationBar">false</item>
    </style>

</resources>
