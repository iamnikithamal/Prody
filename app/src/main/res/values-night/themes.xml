<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Dark theme -->
    <style name="Theme.Prodi" parent="android:Theme.Material.NoActionBar">
        <item name="android:colorPrimary">@color/primary_sage_light</item>
        <item name="android:colorPrimaryDark">@color/primary_sage</item>
        <item name="android:colorAccent">@color/tertiary_gold_light</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowLightNavigationBar">false</item>
        <item name="android:windowBackground">@color/surface_dark</item>
        <item name="android:fontFamily">@font/poppins</item>
    </style>

    <!-- Splash screen theme (dark) -->
    <style name="Theme.Prodi.Splash" parent="Theme.Prodi">
        <item name="android:windowBackground">@drawable/splash_background</item>
        <item name="android:statusBarColor">@color/primary_sage_dark</item>
        <item name="android:navigationBarColor">@color/primary_sage_dark</item>
    </style>

</resources>
